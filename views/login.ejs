<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/stylesForm.css">
    <link rel="stylesheet" href="/static/css/styles.css" >
    <title>Rocksphera</title>
</head>
<body>

  
  <%-include("./partials/header.ejs") %>


<body>
    <main>
        <form class="formulario"action="/users/login" method="post" enctype="multipart/form-data">
        <h3 class="register-h3">Ingresá a tu cuenta</h3>
        <div class="cajacampos">
            
            <div>
              <input
               type="e-mail"
               name="email"
               placeholder="E-mail"
               class="campo <%= locals.errors && errors.email ? 'is-invalid' : null %>"
               value="<% locals.oldData ? oldData.email : "" %>"/>   

               <% if (locals.errors && errors.email) { %>
                 <div class="text-danger">
                 <%= errors.email.msg %>
               </div>
               <% } %>
              </div>

      <div>
             <input 
              type="password"
              name="contrasena"
              placeholder="Elegí tu contraseña"
              class="campo <%= locals.errors && errors.contrasena ? 'is-invalid' : null %>"/>

              <% if (locals.errors && errors.contrasena) { %>
                <div class="text-danger">
                <%= errors.contrasena.msg %>
              </div>
              <% } %>
             </div>
             
             <div>
             <button type="submit" class="button">Ingresar</button> 
             </div>
          
             <hr/>
            
             </div>
        </form>
    </main>

    <%-include("./partials/footer.ejs") %>
    
    </body>
    
    
    </html>

